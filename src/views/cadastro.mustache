<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cadastro de Cliente</title>
</head>
<body>
  <h1>Cadastro de Cliente</h1>
  
  <form action="/cadastro" method="POST">
    <label>Nome:</label>
    <input type="text" name="nome" required><br><br>

    <label>Data de Nascimento:</label>
    <input type="date" name="data_nascimento"><br><br>

    <label>Email:</label>
    <input type="email" name="email"><br><br>

    <label>Telefone:</label>
    <input type="text" name="telefone"><br><br>

    <label>Endereço:</label>
    <input type="text" name="endereco"><br><br>

    <h2>Cadastro de Unhas</h2>

    <div id="unhas-container">
      <div class="unha">
        <label>Dedo:</label>
        <input type="text" name="unhas[0][dedo]" required>
        <label>Estado:</label>
        <input type="text" name="unhas[0][estado]" required>
        <label>Observações:</label>
        <input type="text" name="unhas[0][observacoes]">
      </div>
    </div>

    <button type="button" onclick="adicionarUnha()">Adicionar Unha</button>
    <br><br>

    <button type="submit">Cadastrar</button>
  </form>

  <script>
    let unhaIndex = 1;

    function adicionarUnha() {
      const container = document.getElementById('unhas-container');
      const div = document.createElement('div');
      div.classList.add('unha');
      div.innerHTML = `
        <label>Dedo:</label>
        <input type="text" name="unhas[${unhaIndex}][dedo]" required>
        <label>Estado:</label>
        <input type="text" name="unhas[${unhaIndex}][estado]" required>
        <label>Observações:</label>
        <input type="text" name="unhas[${unhaIndex}][observacoes]">
      `;
      container.appendChild(div);
      unhaIndex++;
    }
  </script>
</body>
</html>
